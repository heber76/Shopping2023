@model Shopping2023.Models.StateVievModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Departamento/Estado</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="CountryId"/>

            <partial name="_State"/>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-outline-success" >Regresar</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
